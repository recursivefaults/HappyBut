<%= form_for(:happy, :remote=>true) do |f| %>
<div class="control-group">
	<%= f.label :happy, t(:happy) %>
	<%= f.text_field :happy, :class => "input-xxlarge" %>
</div>
<div class="control-group">
	<%= f.label :but, t(:but) %>
	<%= f.text_field :but, :class => "input-xxlarge" %>
</div>
  <div class="actions">
    <%= f.submit 'Submit', :class => ['btn', 'btn-primary'], :disable_with => "Editing..." %>
  </div>
<% end %>
